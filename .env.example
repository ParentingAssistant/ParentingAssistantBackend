# Server Configuration
PORT=8080
NODE_ENV=development

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_AUTH_STRING=

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email
# The private key should include the BEGIN and END lines and preserve all newlines
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----"
# Firebase Web API Key (needed for token generation)
FIREBASE_API_KEY=your-firebase-web-api-key

# API Configuration
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_WINDOW_MS=3600000
AI_RATE_LIMIT_MAX_REQUESTS=50

# Cache Configuration
CACHE_TTL=3600
CACHE_NAMESPACE=parenting-assistant-test

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Together AI Configuration
TOGETHER_API_KEY=your-together-api-key

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_MODEL_URL=https://api-inference.huggingface.co/models 