# Server Configuration
PORT=8080
NODE_ENV=production

# Redis Configuration
REDIS_URL=rediss://default:your_redis_password@your-redis-host.upstash.io:6379
REDIS_HOST=your-redis-host.upstash.io
REDIS_PORT=6379
REDIS_AUTH_STRING=your_redis_password

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project-id.iam.gserviceaccount.com
# The private key should include the BEGIN and END lines and preserve all newlines
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
YOUR_PRIVATE_KEY_CONTENT_HERE
-----END PRIVATE KEY-----"

# API Configuration
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_WINDOW_MS=3600000
AI_RATE_LIMIT_MAX_REQUESTS=50

# Cache Configuration
CACHE_TTL=3600
CACHE_NAMESPACE=parenting-assistant

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here 