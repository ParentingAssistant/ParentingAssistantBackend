# Server Configuration
PORT=8080
NODE_ENV=development

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_AUTH_STRING=your-auth-string

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
# The private key can be in one of these formats:
# 1. Base64 encoded (recommended for CI/CD):
#    FIREBASE_PRIVATE_KEY=base64:LS0tLS1CRUdJTiBQUklWQVRFIEtFWS0tLS0t...
# 2. PEM format with literal \n:
#    FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSj..."
# 3. PEM format with actual newlines (in a real .env file, use actual newlines):
#    FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
#    MIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSj...
#    -----END PRIVATE KEY-----"
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-project@your-project-id.iam.gserviceaccount.com

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
API_RATE_LIMIT_MAX_REQUESTS=100   # requests per window
AI_RATE_LIMIT_WINDOW_MS=3600000   # 1 hour
AI_RATE_LIMIT_MAX_REQUESTS=50     # AI requests per hour per user

# Cache Configuration
CACHE_TTL=3600
CACHE_NAMESPACE=ai-responses

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key 