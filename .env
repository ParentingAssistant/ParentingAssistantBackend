# Server Configuration
PORT=8080
NODE_ENV=development

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_AUTH_STRING=your-auth-string

# Firebase Configuration
# Get these values from your Firebase service account JSON file:
# 1. Go to Firebase Console > Project Settings > Service Accounts
# 2. Click "Generate New Private Key"
# 3. Copy values from the downloaded JSON file:
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email
# For the private key, copy the entire private_key value from the JSON file
# Make sure to keep the quotes and newlines intact
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
YOUR_ACTUAL_PRIVATE_KEY_HERE
-----END PRIVATE KEY-----"

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
API_RATE_LIMIT_MAX_REQUESTS=100   # requests per window
AI_RATE_LIMIT_WINDOW_MS=3600000   # 1 hour
AI_RATE_LIMIT_MAX_REQUESTS=50     # AI requests per hour per user

# Cache Configuration
CACHE_TTL=3600
CACHE_NAMESPACE=ai-responses

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key 